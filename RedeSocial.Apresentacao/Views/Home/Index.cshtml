@model HomeViewModel
@using RedeSocial.Apresentacao.Controllers;

@inject PostController PostController

<div class="container-fluid gedf-wrapper">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="h5"></div>
                    <div class="h4 text-muted">@Model.NomePerfil</div>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="h6 text-muted">Seguidores</div>
                        <div class="h5">52342</div>
                    </li>
                    <li class="list-group-item">
                        <div class="h6 text-muted">Seguindo</div>
                        <div class="h5">6758</div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-6 gedf-main">

            <!--- \\\\\\\Post-->
            <div class="card gedf-card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">
                                Postar
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Post" enctype="multipart/form-data">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                                <div class="form-group">
                                    <label class="sr-only" for="message">postar</label>
                                    <textarea class="form-control" id="message" name="message" rows="3" required placeholder="Oque Voce está pensando?"></textarea>
                                </div>
                                <div class="form-group">
                                    <div class="custom-file">
                                        <input type="file" class="custom-input" required id="customFile" name="customFile" placeholder="Upload Imagem">
                                        
                                    </div>
                                </div>

                            </div>
                            <div class="btn-toolbar justify-content-between">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-primary">Postar</button>
                                </div>
                                <div class="btn-group">
                                    <select class="custom-select" name="Privacidade" required>
                                        <option value=0>Publico</option>
                                        <option value=1>Amigos</option>
                                        <option value=2>Privado</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Post /////-->
            <!--- \\\\\\\Post-->
            
            @foreach (var post in Model.ListaPost)
            {
                <div class="card gedf-card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="mr-2">
                                    <img class="rounded-circle" width="45" src="@Model.FotoPerfil" alt="">
                                </div>
                                <div class="ml-2">
                                    <div class="h5 m-0"></div>
                                    <div class="h7 text-muted">@post.NomeCompleto</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body" style="border-bottom:1px solid rgba(0,0,0,.125);">
                        <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i> @post.TempoDaPostagem @post.FormatacaoTempo atrás</div>
                        <p class="card-text">
                            @post.Texto
                        </p>
                    </div>
                    <div class="card-body">
                        <img src="@post.UriImage" width="100%"/>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="card-link"><i class="fa fa-gittip"></i> Like</a>
                        <a href="#" class="card-link"><i class="fa fa-comment"></i> Comment</a>
                        <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share</a>
                    </div>
                </div> 
            }

            <!-- Post /////-->
            <!-- Post /////-->
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="h5"></div>
                    <div class="h4 text-muted">Lista de amigos</div>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="h5"><img src="" />  Amigo 1</div>
                    </li>
                    <li class="list-group-item">
                         <div class="h5"><img src="" /> Amigo 2</div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
