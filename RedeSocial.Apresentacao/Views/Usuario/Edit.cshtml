@model RedeSocial.Apresentacao.Models.Usuarios.UsuarioEditViewModel
@{

} 

<form asp-action="Edit" class="col-md-12" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.Id" />
    <div class="row justify-content-center" style="margin-top: 10px;">
        <div class="col-md-12">
            <h4 style="margin-top: 10px;">Editar Informações pessoais</h4>
            <hr/>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control"/>
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control"/>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control"></input>
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ImageFile" class="control-label">Imagem</label>
                <input type="file" name="ImageFile" class="form-control"/>
                <span validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="IdentityUser" hidden class="custom-select"/>
                <input type="hidden" asp-for="FotoPerfil" hidden/>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary"/>
                <button asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn btn-secondary">Configurações adicionais da conta</button>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <partial name="_ValidationScriptsPartial" />
}