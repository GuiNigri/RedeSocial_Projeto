@model UsuarioDetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid gedf-wrapper">
    <div class="row justify-content-center col-md-12" style="margin-top:10px;">

            

        <table class="table justify-content-center col-md-6">
            <h4 class="col-sm-12" style="text-align: center;">Encontrar Usuarios</h4>
            <thead>
                <tr>
                    <th>
                        Usuario
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listaUsuarios)
                {
                    <tr>
                        <td>
                            <p>
                                <img class="rounded-circle" src="@item.FotoPerfil" style="max-width: 50px;" alt="" />
                                <a class="text-dark" asp-controller="Usuario" asp-action="Perfil" asp-route-userPerfil="@item.IdentityUser"> @item.Nome @item.Sobrenome</a>
                            </p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
